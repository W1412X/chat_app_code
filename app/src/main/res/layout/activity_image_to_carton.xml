<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageToCartonActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/choose_img"
                android:background="@drawable/to_carton_top_button"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/list_icon_small"
                android:scaleType="centerInside"
                android:layout_weight="1"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#66a0eee0"/>
            <android.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TO CARTON"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="#a0eee0"
                android:layout_weight="0.5"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#66a0eee0"/>
            <ImageButton
                android:id="@+id/save_img"
                android:text="保存图片"
                android:background="@drawable/to_carton_top_button"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:src="@drawable/download_icon"
                android:scaleType="centerInside"
                />
        </LinearLayout>
        <android.widget.ImageButton
            android:id="@+id/erciyuan_image_view"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_weight="0.15"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/convert_person1_img"
                    android:background="@drawable/to_carton_top_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="人像1"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:src="@drawable/person_head_icon_big"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#66a0eee0"/>
                <ImageButton
                    android:id="@+id/convert_person2_img"
                    android:background="@drawable/to_carton_top_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="人像2"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:src="@drawable/person_head_icon_big"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#66a0eee0"/>
                <ImageButton
                    android:id="@+id/convert_landscape_img"
                    android:background="@drawable/to_carton_top_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="风景"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:src="@drawable/landscape_icon"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/to_carton_loading_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>